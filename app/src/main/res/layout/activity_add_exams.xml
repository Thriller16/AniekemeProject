<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExams">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/add_exams"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Course Title"
        android:layout_margin="12dp"
        android:id="@+id/add_exams_title"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time is the paper"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:hint="Enter day"
            android:layout_margin="12dp"
            android:id="@+id/add_exams_day"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="wrap_content"
            android:hint="Enter time"
            android:layout_margin="12dp"
            android:id="@+id/add_exams_time"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Course"/>

        <Spinner
            android:layout_alignParentRight="true"
            android:id="@+id/spinner_exams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <Button
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:text="Add Exams"
        android:padding="6dp"
        android:textStyle="bold"
        android:id="@+id/add_exam_btn"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>